@model AssignmentV3.Models.Program

@{
    ViewBag.Title = "Program Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header id="header">
    <div class="intro">
        <div class="overlay">
            <div class="container">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2 intro-text">
                        <h1>
                            @ViewBag.Title
                        </h1>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container">
    <div class="section-title">
        <h2>@ViewBag.Title</h2>
    </div>
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.ProgramName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ProgramName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ProgramDesc)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ProgramDesc)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ProgramPrice)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ProgramPrice)
            </dd>

        </dl>
    </div>
    <a href="/Home/Index#services" class="btn btn-custom btn-lg page-scroll">Back to programs</a>
</div>

